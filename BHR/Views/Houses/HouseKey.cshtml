@model BHR.Models.HouseKey
@{
    ViewBag.Title = "HouseKey";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="h2marb">Generate Your House Key</h2>
<div class="row">
    <div class="house-key">
        @using (Html.BeginForm("StoreHouseKey", "Houses"))
        {
            @Html.ValidationSummary(true,"Please follow the instructions below")
            <div class="form-group">
                @Html.LabelFor(hk=>hk.Key)
                @Html.TextBoxFor(hk=>hk.Key, new{@class="form-control", @readonly="readonly"})
            </div>
            <div class="form-group">
                @Html.LabelFor(hk=>hk.FlatName)
                @Html.TextBoxFor(hk=>hk.FlatName, new{@class="form-control"})
                @Html.ValidationMessageFor(hk => hk.FlatName)
            </div>
            @Html.HiddenFor(hk=>hk.HouseId)
            @Html.ActionLink("generate new key","HouseKey","Houses",new{id = Model.HouseId},new {@class="btn btn-success"})
            @Html.AntiForgeryToken()
            <button class="btn btn-primary">Save</button><br/>
            @Html.ActionLink("back to previous", "HouseDetails", "Houses",new{id = Model.HouseId},null)

        }
    </div>
</div>
@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}

