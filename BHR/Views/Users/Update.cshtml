@model BHR.ViewModels.UpdateUserViewModel
@{
    ViewBag.Title = "Update~User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="row">
    <div class="update-info col-lg-offset-1 col-lg-6">
        <h2>Update Information</h2>
        @using (Html.BeginForm("StoreUpdate", "Users"))
        {
            @Html.ValidationSummary(true,"Please follow the instructions below")
            <div class="form-group">
                @Html.LabelFor(u=>u.FirstName)
                @Html.TextBoxFor(u=>u.FirstName,new {@class="form-control", @readonly="true"})
            </div>
            <div class="form-group">
                @Html.LabelFor(u=>u.LastName)
                @Html.TextBoxFor(u=>u.LastName,new {@class="form-control", @readonly = "true" })
            </div>
            <div class="form-group">
                @Html.LabelFor(u=>u.UserId)
                @Html.TextBoxFor(u=>u.UserId,new {@class="form-control", @readonly = "true" })

            </div>
            <div class="form-group">
                @Html.LabelFor(u=>u.MobileNumber)
                @Html.TextBoxFor(u=>u.MobileNumber,new {@class="form-control"})
                @Html.ValidationMessageFor(u => u.MobileNumber)
            </div>
            <div class="form-group">
                @Html.LabelFor(u=>u.Address)
                @Html.TextAreaFor(u=>u.Address,new {@class="form-control"})
                @Html.ValidationMessageFor(u => u.Address)
            </div>
            <div class="form-group">
                @Html.LabelFor(u=>u.OccupationId)
                @Html.DropDownListFor(u=>u.OccupationId,new SelectList(@Model.Occupations,"Id","Name"),"Select One",new {@class="form-control"})
                @Html.ValidationMessageFor(u => u.OccupationId)
            </div>
            @Html.AntiForgeryToken()
            <button class="btn btn-primary">Update</button> @Html.ActionLink("back to previous", "Index", "Users")
        }
    </div>
</div>


