@model BHR.Models.Document
@{
    ViewBag.Title = "CheckDocument";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="user-document col-lg-offset-3 col-lg-5">
        <h2>Your Document</h2>
        @Html.ActionLink("back to previous","Index","Users")
        @{var base64 = Convert.ToBase64String(Model.DocumentContents);
            var imgSrc = string.Format("data: {0}; base64, {1}", Model.ContentType, base64);
        }

        <img src="@imgSrc" alt="profile image" style='height: 100%; width: 100%; border: 1px solid black;'/>
    </div>
</div>

